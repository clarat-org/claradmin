<%= t(".paragraph_entry.#{@section_suffix}",
    root_link: t('.text_link',
               name: t(".clarat_name.#{@section_suffix}"),
               url: t(".link_url.#{@section_suffix}")),
    offer_text: @offers_teaser ? t('.offer_text_multiple') : t('.offer_text', count: @offers.count) ) %>
<%- if @singular_section %>
<%- if @offers_teaser %>
<%= t(".list_entry_teaser.singular",
    section_name: t(".clarat_name.#{@section_suffix}")) %>
<%- else %>
<%= t(".list_entry",
    section_name: t(".clarat_name.#{@section_suffix}"),
    count: @offers.count) %>
<%- end %>
<%- # Start single offer list: one offer or multiple offers %>
<%- @offers.each do |offer| %>

"<%= offer.name %>",
<%= t(".list_link_intro") %>
<%= t(".link_url.#{@section_suffix}") + '/angebote/' + (offer.slug || offer.id.to_s) %>
<%- end %>

<%- @section_suffix.split('_').each do |section| %>
<%= t(".paragraph_overview_link",
    section_name: t(".clarat_name.#{section}"),
    overview_link: (t(".link_url.#{section}") + @overview_href_suffix) ) %>
<%- end %>
<%- else %>
<%- # Start multiple offer lists: one offer or multiple offers each %>
<%- @section_suffix.split('_').each do |section| %>
<%- if @offers_teaser %>
<%= t(".list_entry_teaser.#{@offers_teaser ? 'multiple' : 'singular'}",
    section_name: t(".clarat_name.#{section}")) %>
<%- else %>
<%= t(".list_entry",
    section_name: t(".clarat_name.#{section}"),
    count: @offers.count) %>
<%- end %>
<%- @offers.each do |offer| %>
<%- if offer.in_section? section %>

"<%= offer.name %>",
<%= t(".list_link_intro") %>
<%= t(".link_url.#{section}") + '/angebote/' + (offer.slug || offer.id.to_s) %>
<%- end # end if offer.in_section? %>
<%- end # end offers.each %>

<%= t(".paragraph_overview_link",
    section_name: t(".clarat_name.#{section}"),
    overview_link: (t(".link_url.#{section}") + @overview_href_suffix) ) %>
<%- end # end section_suffix.each %>
<%- end # end else %>
<%= t(".paragraph_found_error",
    section_name: t(".clarat_name.#{@section_suffix}")) %>
<%- if @offers_teaser %>
<%= t(".paragraph_split_explanation",
    section_name: t(".clarat_name.#{@section_suffix}")) %>
<%- else %>
<%= t(".paragraph_offers_missing.#{@section_suffix}") %>
<%- end %>
<%= t(".paragraph_explain_clarat.#{@section_suffix}",
    section_name: t(".clarat_name.#{@section_suffix}"),
